<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ZEditText">
        <attr name="android:textSize" />
        <attr name="android:textColor" />
        <attr name="isBoldText" format="boolean" />
        <attr name="passwordText" format="string" />
        <!-- 输入的文字的个数 -->
        <attr name="inputCount" format="integer" />
        <!-- 文字之间的间距 -->
        <attr name="space" format="dimension" />
        <!-- 是否保持文字正方形 -->
        <attr name="isSquare" format="boolean" />
        <!-- 文字的背景 -->
        <attr name="textBackground" format="reference" />
        <!-- 是否是密码 -->
        <attr name="isPassword" format="boolean" />
        <attr name="cursorDrawable" format="reference" />
        <attr name="cursorDrawableWidth" format="dimension" />
        <attr name="cursorDrawableHeight" format="dimension" />
    </declare-styleable>

    <declare-styleable name="PlaceHolderLayout">
        <!--请求错误后显示的图片-->
        <attr name="error_drawable" format="integer"/>
        <!--网络错误后显示的图片-->
        <attr name="error_net_drawable" format="integer"/>
        <!--没有数据时显示的图片-->
        <attr name="empty_drawable" format="integer"/>
        <!--重试按钮文字-->
        <attr name="text_reload" format="integer"/>
        <!--网络错误提示文字-->
        <attr name="text_net_error" format="integer"/>
        <!--加载中的提示文字-->
        <attr name="text_loading" format="integer"/>
        <!--空数据的提示文字-->
        <attr name="text_empty" format="integer"/>
        <!--是否使用refresh下拉刷新-->
        <attr name="enable_refresh" format="boolean"/>
        <!--绑定视图隐藏的方式，因为有的地方使用gone效果与invisible效果不同。默认gone-->
        <attr name="bind_view_hide_type">
            <flag name="gone" value="8" />
            <flag name="invisible" value="4" />
        </attr>
    </declare-styleable>
</resources>