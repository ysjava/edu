<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="28dp">

    <ImageView
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:src="@drawable/ic_arrow_left" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="请输入验证码    "
        android:textColor="#101010"
        android:textSize="26sp"
        android:textStyle="bold" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="验证码已发送至："
            android:textColor="#999999"
            android:textSize="13sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="15281715693"
            android:textColor="#000000"
            android:textSize="13sp" />
    </LinearLayout>

    <com.sandgrains.edu.student.utils.custom.ZEditText
        android:id="@+id/zdt_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:textSize="18sp"
        app:cursorDrawable="@drawable/drawable_cursor"
        app:cursorDrawableWidth="1dp"
        app:inputCount="6"
        app:isBoldText="true"
        app:isSquare="true"
        app:space="10dp"
        app:textBackground="@drawable/default_edit_bg"
        tools:layout_editor_absoluteX="10dp" />


</LinearLayout>