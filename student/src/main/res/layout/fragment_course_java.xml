<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/scrollview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <com.sandgrains.edu.student.utils.custom.PlaceHolderLayout
                android:id="@+id/lay_place_holder_2"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                app:enable_refresh="false">

                <LinearLayout
                    android:id="@+id/lay_bind"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <com.sandgrains.edu.student.utils.custom.NestedBGABanner
                        android:id="@+id/banner"
                        style="@style/BannerDefaultStyle"
                        app:banner_transitionEffect="alpha" />

                    <com.angcyo.tablayout.DslTabLayout
                        android:id="@+id/tab_layout"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:paddingHorizontal="16dp"
                        app:tab_indicator_anim="true"
                        app:tab_indicator_height="3dp"
                        app:tab_indicator_width="22dp"
                        app:tab_select_color="@color/colorFontPrimary">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="30dp"
                            android:gravity="center"
                            android:text="默认" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="30dp"
                            android:gravity="center"
                            android:text="最新" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="销量" />

                    </com.angcyo.tablayout.DslTabLayout>

                    <com.sandgrains.edu.student.utils.custom.PlaceHolderLayout
                        android:id="@+id/lay_place_holder"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:bind_view_hide_type="invisible"
                        app:enable_refresh="false">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recycler"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </com.sandgrains.edu.student.utils.custom.PlaceHolderLayout>
                </LinearLayout>
            </com.sandgrains.edu.student.utils.custom.PlaceHolderLayout>


        </androidx.core.widget.NestedScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <com.angcyo.tablayout.DslTabLayout
        android:id="@+id/tab_layout2"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:background="#FAFAFA"
        android:paddingHorizontal="16dp"
        android:visibility="gone"
        app:tab_indicator_anim="true"
        app:tab_indicator_height="3dp"
        app:tab_indicator_width="22dp"
        app:tab_select_color="@color/colorFontPrimary">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30dp"
            android:gravity="center"
            android:text="默认" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30dp"
            android:gravity="center"
            android:text="最新" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="销量" />

    </com.angcyo.tablayout.DslTabLayout>
</FrameLayout>

