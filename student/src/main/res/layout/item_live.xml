<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="20dp"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tv_tag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:text="直播公开课"
        android:textColor="@color/colorFontPrimaryDark"
        android:textSize="14sp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/bg_live"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_tag"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/ic_player"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:text="12月14日 20:00"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@id/iv_tag"
            app:layout_constraintTop_toTopOf="@id/iv_tag" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="内卷时代，高薪岗位更偏爱那种程序员？"
            android:textColor="@color/colorFontPrimaryDark"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@id/iv_tag"
            app:layout_constraintTop_toBottomOf="@id/iv_tag" />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text=" *展望｜元宇宙的风口意味着什么？\n *揭秘｜后端技能路线和薪资水平汇总"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@id/tv_title"
            app:layout_constraintTop_toBottomOf="@id/tv_title" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_portrait"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/oynn"
            app:layout_constraintStart_toStartOf="@id/tv_title"
            app:layout_constraintTop_toBottomOf="@id/tv_content" />

        <TextView
            android:id="@+id/tv_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:text="无限可能"
            android:textColor="@color/colorFontPrimary"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/iv_portrait"
            app:layout_constraintTop_toTopOf="@id/iv_portrait" />

        <TextView
            android:id="@+id/tv_yuyue"
            android:layout_width="72dp"
            android:layout_height="24dp"
            android:background="@drawable/bg_border_red"
            android:gravity="center"
            android:text="预约"
            android:textColor="@color/red"
            android:textSize="12sp"
            app:layout_constraintBaseline_toBaselineOf="@id/tv_author"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>