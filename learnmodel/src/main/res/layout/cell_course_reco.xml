<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="380dp"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="18dp"
    android:paddingHorizontal="10dp">

    <com.sandgrains.edu.learnmodel.RoundAngleImageView
        android:id="@+id/iv_img"
        android:layout_width="62dp"
        android:layout_height="90dp"
        android:src="#03A9F4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginStart="18dp"
        android:orientation="vertical"
        android:paddingTop="4dp">

        <TextView
            android:id="@+id/tv_course_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="从零开始干穿JAVA"
            android:textSize="13sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_course_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="要想干穿JAVA，就得像我一样吊才行.虽敌众我寡，末将也能万军从中取敌将首级.虽敌众我寡，末将也能万军从中取敌将首级,"
            android:textSize="11sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/tv_course_name"
            app:layout_constraintTop_toBottomOf="@id/tv_course_name" />

        <Space
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_course_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥999"
                android:textColor="#f00"
                android:textSize="14sp"
                android:textStyle="bold" />

            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_course_study_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1599人学习"
                android:textSize="12sp" />

        </LinearLayout>
    </LinearLayout>


</LinearLayout>